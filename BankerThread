
public class BankerThread extends Thread {

    Bank bank;

    int counter = 0;
    int customerNum;

    public BankerThread(Bank b1, int customerNum) {
        this.bank = b1;
        this.customerNum = customerNum;
    }

    @Override
    public void run() {




                bank.requestResources(customerNum, counter);
                counter++;
                bank.requestResources(customerNum, counter);
                counter++;
                bank.requestResources(customerNum, counter);
                counter++;

                bank.releaseRecources(customerNum);

                bank.calculateCustomerNeed(customerNum);

                bank.runProcess(customerNum);





        }



}
